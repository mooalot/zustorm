// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020", // Set to the desired ECMAScript version
    "module": "ESNext", // Use ESNext for module syntax
    "declaration": true, // Generate .d.ts files
    "declarationDir": "dist", // Output directory for declarations
    "emitDeclarationOnly": true, // Only emit declarations
    "outDir": "dist", // Output directory for compiled files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "lib": ["ES2020", "DOM"], // Include necessary libraries
    "jsx": "react-jsx", // If your library interacts with React
    "moduleResolution": "node", // Resolve modules using Node.js strategy
    "noImplicitReturns": true // Disallow function return without explicit return value
  },
  "include": ["src"], // Include your source files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
